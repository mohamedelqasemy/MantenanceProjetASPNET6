@model MantenanceProjetASPNET6.Models.InfoPersoModel
@{
    ViewBag.Title = "Step1";
    Layout = null;
}

<!-- icon -->
<link rel="shortcut icon" type="image/x-icon" href="~/images/ensa_logo.png" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />

<style>
    body {
        background: #7db4f3;
        background: -webkit-linear-gradient(-135deg, #7db4f3, #fdaee9dc);
        background: -o-linear-gradient(-135deg, #7db4f3, #fdaee9dc);
        background: -moz-linear-gradient(-135deg, #7db4f3, #fdaee9dc);
        background: linear-gradient(-135deg, #7db4f3, #fdaee9dc);
    }
</style>


<h2 class="text-center mt-3 font-weight-bold">Step 1 : Informations Personnelles</h2>

@using (Html.BeginForm("Step1", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" } ))
{
    <hr class="col-md-7 offset-md-2 mb-4" />
    <div class="row d-flex justify-content-center m-b-30 mt-5">
        <div class="offset-3"></div>
        <div class="col-md-7">

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.DateNaissance, "Date de naissance :", htmlAttributes: new { @class = "text-white control-label col-md-10 font-weight-bold" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.DateNaissance, new { htmlAttributes = new { @class = "form-control datePicker" } })
                        @Html.ValidationMessageFor(model => model.DateNaissance, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Sexe, "Sexe : ", htmlAttributes: new { @class = "text-white control-label col-md-10  font-weight-bold" })
                    <div class="col-md-7">
                        @Html.DropDownListFor(model => model.Sexe,
                                new List<SelectListItem>
                                {
                                   new SelectListItem{Text="Femme", Value="Femme"},
                                   new SelectListItem{Text="Homme", Value="Homme"},
                                }
                                , "-- Choix de Sexe --", htmlAttributes: new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.Sexe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LieuNaissance, "Lieu de naissance :", htmlAttributes: new { @class = "text-white control-label col-md-10 font-weight-bold" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.LieuNaissance, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.LieuNaissance, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Nationalite, "Nationalité : ", htmlAttributes: new { @class = "text-white control-label col-md-10  font-weight-bold" })
                    <div class="col-md-7">
                        @Html.DropDownListFor(model => model.Nationalite,
                                new List<SelectListItem>
                                {
                                   new SelectListItem{Text="Marocaine", Value="Marocaine"},
                                   new SelectListItem{Text="Etrangère", Value="Etrangère"},
                                }
                                , "-- Choix de Nationalité --", htmlAttributes: new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.Nationalite, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Gsm, "GSM :", htmlAttributes: new { @class = "text-white control-label col-md-10  font-weight-bold" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Gsm, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Gsm, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Telephone, "Tel :", htmlAttributes: new { @class = "text-white control-label col-md-10 font-weight-bold" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Adresse, "Adresse :", htmlAttributes: new { @class = "text-white control-label col-md-10 font-weight-bold" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Adresse, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Ville, "Ville :", htmlAttributes: new { @class = "text-white control-label col-md-10 font-weight-bold" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Ville, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Ville, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* ajouter un champ pour uploader le cin pdf *@
                <div class="form-group">
                    <label for="CinPdfFile" class="control-label col-md-12 text-white font-weight-bold">Upload du Cin (PDF) :</label>
                    <div class="col-md-7">
                        <input type="file" name="CinPdfFile" class="form-control" accept=".pdf" />
                        <span class="text-danger">@ViewBag.FileUploadError</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 d-flex justify-content-end">
                        <input type="submit" value=" Next " class="btn btn-primary px-5 mt-2 " />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
            crossorigin="anonymous"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $(".datePicker").datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "1993:2002"
            });
        });
    </script>
}