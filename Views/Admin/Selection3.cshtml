                    '<td>' + classement + '</td>' +
                    '<td>' + element.dossier + '</td>' +
                    '<td>' + element.filiere + '</td>' +
                    '<td>' + element.type_dip + '</td>' +
                    '<td>' + element.admis + '</td>' +
                    '<td>' + element.etablissement + '</td>' +
                    '<td>' + element.ville_dip + '</td>' +
                    '<td>' + element.matricule + '</td>' +
                    '<td>' + element.cin + '</td>' +
                    + '</tr>'
                );

            });
           
            });

       
           
    }

</script>


